{
  "name": "RAG8s",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": [
  //"--gpus", "all",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined",
    "-v", "/var/run/docker.sock:/var/run/docker.sock"
  ],
  "remoteUser": "root",
  "postCreateCommand": "docker version || echo '⚠️ Docker socket not accessible. Ensure Docker is running and shared with volume.'",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "features": {},
  "settings": {}
}


