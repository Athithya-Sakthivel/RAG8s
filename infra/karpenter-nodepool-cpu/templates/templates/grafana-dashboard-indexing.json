{
  "uid": "rag8s-indexing",
  "title": "RAG8s Indexing & Inference Overview",
  "panels": [
    {
      "type": "timeseries",
      "title": "Inference p95 latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(rag8s_inference_latency_seconds_bucket[5m])) by (le, model))",
          "legendFormat": "{{model}}"
        }
      ],
      "gridPos": {"x":0,"y":0,"w":12,"h":6}
    },
    {
      "type": "timeseries",
      "title": "Inference requests per second",
      "targets": [
        {
          "expr": "sum(rate(rag8s_inference_requests_total[1m])) by (model)",
          "legendFormat": "{{model}}"
        }
      ],
      "gridPos": {"x":12,"y":0,"w":12,"h":6}
    },
    {
      "type": "timeseries",
      "title": "Batch size distribution (avg)",
      "targets": [
        {
          "expr": "sum(rate(rag8s_batch_size_sum[5m])) / sum(rate(rag8s_batch_size_count[5m]))",
          "legendFormat": "avg batch size"
        }
      ],
      "gridPos": {"x":0,"y":6,"w":12,"h":6}
    },
    {
      "type": "timeseries",
      "title": "Node CPU usage (cores)",
      "targets": [
        {
          "expr": "sum(node_cpu_seconds_total{mode!='idle'}) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {"x":12,"y":6,"w":12,"h":6}
    }
  ]
}
